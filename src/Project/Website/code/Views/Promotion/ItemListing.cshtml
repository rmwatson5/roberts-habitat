@using Sitecore.Feature.Promotion.Models
@using Synthesis.Mvc.Extensions
@model IItemListingSettingsItem
@{
    var children = Model.Children.OfType<IListingItemItem>().ToList();
    if (!children.Any())
    {
        return;
    }
}

<section class="section section-full ">
    <div class="container">
        <div class="row">
            @foreach (var child in children)
            {
                <div class="col-sm-4">
                    <div class="thumbnail">
                        @using (child.Link.RenderWithBody(Html))
                        {
                            @child.Image.Render(500, cssClass: "img-responsive")
                        }

                        <div class="caption">
                            <h3 class="teaser-heading">
                                @child.Title.Render()
                            </h3>
                            @child.Description.Render()
                            <br/><br/>
                            @using (child.Link.RenderWithBody(Html, "btn btn-default"))
                            {
                                @child.LinkText.Render()
                            }
                        </div>
                    </div>
                </div>
            }
           
        </div>
    </div>
</section>
