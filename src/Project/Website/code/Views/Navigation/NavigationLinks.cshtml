@using Sitecore.Feature.Navigation.Models
@using Synthesis.Mvc.Extensions
@model ILinkMenuItem

<nav>
    <ul class="nav @Model.AdditionalStyles.RawValue">
        @foreach (var item in Model.Children.OfType<ILinkMenuItemItem>())
        {
            var divider = item.DividerBefore.Value ? "divider-left" : string.Empty;
            <li class="@divider">
            
                <a href="@item.Link.Href" target="@item.Link.Target" title="@item.Link.Text">
                    @if (item.Icon.HasTextValue)
                    {
                        <i class="fa fa-@item.Icon.RawValue"></i>@:&nbsp;
                    }
                    else
                    {
                        @item.ShowTitle.Render()
                    }
                </a>
            </li>
        }
    </ul>
</nav>